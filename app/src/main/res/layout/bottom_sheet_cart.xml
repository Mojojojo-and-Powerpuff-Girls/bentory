<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopping_cart"
    android:orientation="vertical"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="125dp"
        android:padding="10dp"
        android:contentDescription="view list of top selling"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:textSize="36dp"
            android:fontFamily="@font/pixelify_sans"
            android:textColor="#3A291B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:text="Total" />

        <TextView
            android:id="@+id/total_price_text"
            android:textSize="36dp"
            android:fontFamily="@font/pixelify_sans"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/confirm_button"
        android:layout_width="174dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="Confirm Button"
        android:background="@drawable/confirm_btn"
        />


</LinearLayout>