<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddProduct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#D39B72"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/burgerbttn"
                android:layout_width="93dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:contentDescription="burgerbutton"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/burger_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:text="Add Product"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="bellbutton"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bell_icon" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF1D7"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/backgroundImage"
                    android:layout_centerInParent="true"
                    android:layout_width="400dp"
                    android:layout_height="1150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_item_container" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignTop="@+id/backgroundImage"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="73dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Add New Item"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="101dp"
                    android:layout_height="102dp"
                    android:layout_below="@+id/title"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Upload Picture"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/upload_picture_btn" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageButton2"
                    android:layout_centerInParent="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemName"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Category"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemCategory"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Quantity"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cost_price"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemQuantity"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Cost Price"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sale_price"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemCostPrice"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Sale Price"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/size"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemSalePrice"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Size"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemSalePrice"
                    android:layout_marginLeft="185dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Weight"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemSize"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usc_code"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newItemDescription"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pixelify_sans"
                    android:text="USC Code"
                    android:textAlignment="center"
                    android:textColor="#3A291B"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/newItemName"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/imageButton2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="42dp"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:background="@drawable/add_item_edit_box" />

                <EditText
                    android:id="@+id/newItemCategory"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemName"
                    android:layout_marginTop="50dp"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:background="@drawable/add_item_edit_box" />

                <EditText
                    android:id="@+id/newItemQuantity"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemCategory"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/newItemCostPrice"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemQuantity"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/newItemSalePrice"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemCostPrice"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/newItemSize"
                    android:layout_width="145dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemSalePrice"
                    android:layout_centerInParent="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="56dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/newItemWeight"
                    android:layout_width="145dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemSalePrice"
                    android:layout_centerInParent="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="215dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/newItemDescription"
                    android:layout_width="303dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemSize"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="225dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/newItemDescription"
                    android:layout_centerInParent="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="56dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/add_item_edit_box" />

                <ImageButton
                    android:id="@+id/barcodeBtn"
                    android:layout_below="@+id/newItemWeight"
                    android:layout_width="152dp"
                    android:layout_height="116dp"
                    android:layout_centerInParent="false"
                    android:layout_marginTop="113dp"
                    android:layout_marginLeft="255dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Barcode button"
                    android:visibility="visible"
                    app:srcCompat="@drawable/barcode_btn" />

                <ImageButton
                    android:id="@+id/newItemSaveBtn"
                    android:layout_below="@+id/code"
                    android:layout_centerInParent="true"
                    android:layout_width="152dp"
                    android:layout_height="116dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="50dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Save button"
                    android:visibility="visible"
                    app:srcCompat="@drawable/add_item_save_button" />
            </RelativeLayout>


        </ScrollView>

</LinearLayout>