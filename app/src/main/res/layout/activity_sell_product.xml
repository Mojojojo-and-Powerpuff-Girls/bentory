<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1D7"
    tools:context=".activities.SellProduct">

    <!-- Main content area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF1D7">

        <!-- Main content -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/reusable_toolbar" />

            <!-- Search bar section -->
            <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <EditText
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search here..."
                    android:paddingStart="50dp"
                    android:paddingEnd="15dp"
                    android:paddingVertical="12dp"
                    android:textColorHint="#888888"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="@font/pixelify_sans"
                    android:background="@drawable/search_bar"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:inputType="text"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/filterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Filter products"
                    app:srcCompat="@drawable/filter_icon" />

            </LinearLayout>

            <!-- Barcode input section -->
            <LinearLayout
                android:id="@+id/scannerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <EditText
                    android:id="@+id/sellingCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/add_item_edit_box"
                    android:hint="-"
                    android:textColorHint="#888888"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingVertical="12dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:fontFamily="@font/pixelify_sans"
                    android:textCursorDrawable="@drawable/cursor_black" />

                <ImageButton
                    android:id="@+id/scannerBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Scan Barcode"
                    android:background="@android:color/transparent"
                    android:src="@drawable/barcode_btn" />

            </LinearLayout>

        </LinearLayout>

        <!-- Product list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSelling"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:contentDescription="List of available products"
            app:layout_constraintTop_toBottomOf="@id/main"
            app:layout_constraintBottom_toTopOf="@id/bottomSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom cart section -->
        <FrameLayout
            android:id="@+id/bottomSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Cart background"
                android:src="@drawable/cart_box" />

            <ImageButton
                android:id="@+id/pullout_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="Open cart"
                android:src="@drawable/pullout_icon" />

        </FrameLayout>

        <!-- Barcode scanner overlay -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/barcodeScannerLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Touch blocker -->
            <View
                android:id="@+id/touchBlocker"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Barcode scanner view -->
            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeScanner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Scanner target overlay -->
            <View
                android:id="@+id/targetOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/target_size"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintHeight_percent="0.60"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation drawer (burger menu) -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/menu_background"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/burgerNameplate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/burger_nameplate"
                android:contentDescription="Burger Nameplate" />

            <TextView
                android:id="@+id/textViewGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pixelify_sans"
                android:padding="16dp"
                android:text="Hi, Oilai"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/buttonAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Add Product"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_add_product_button" />

        <ImageButton
            android:id="@+id/buttonInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Inventory"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_inventory_button" />

        <ImageButton
            android:id="@+id/buttonSellingWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Selling Window"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_selling_window_button" />

        <ImageButton
            android:id="@+id/buttonStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Statistics"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_statistics_button" />

        <ImageButton
            android:id="@+id/buttonScanProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Scan Product"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_scan_button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="100dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="Logout"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logout_icon" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>